.container {
  font-family: PingFang SC Medium, sans-serif;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.goods-box{
  display: flex;
  width: 690rpx;
  height: 220rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 36rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 5rpx 15rpx 15rpx #eee;
}
.goods-box .goods-item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
}
.goods-box .img-box{
  width: 164rpx;
  height: 164rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: content-box;
}
.goods-box .img-box image{
   width: 164rpx;
   height: 164rpx;
}
.goods-box .goods-detail{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: space-between;
  height: 164rpx;
}
.goods-box .goods-title, .goods-box .goods-price{
  overflow: hidden;
  font-size: 30rpx;
  margin-left: 30rpx;
}
.goods-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}
.goods-box .goods-title{
  font-family: PingFang SC Medium, sans-serif;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 20rpx;
  color:#000;
}
.goods-box .goods-price{
  font-family: DINAlternate Bold, sans-serif;
  display: flex;
  align-items: center;
  color:#ff001c;
}
.price-label{
  font-size: 30rpx;
  padding-right: 10rpx;
}
.price-value{
  font-size: 34rpx;
}
.price-unit{
  font-size: 26rpx;
  padding-left: 10rpx;
}
.goods-select{
  font-family: PingFang SC Medium, sans-serif;
  width: 126rpx;
  height: 54rpx;
  line-height: 54rpx;
  background-color: #ff001c;
  border-radius: 8rpx;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  font-size: 28rpx;
}
