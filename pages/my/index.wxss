.container{
  min-height: 100vh;
  overflow: hidden;
  background-image: url(https://cdn.it120.cc/apifactory/2019/03/07/1c731c0a355da6c7f0e163fa1917d4d3.png);
  background-position: 0 -128rpx;
  background-size: 750rpx auto,1500rpx, auto;
  background-repeat: no-repeat;
  background-color: #f8f8f8;
  color: #000;
  justify-content: normal;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
  width: 750rpx;
  margin-top: 120rpx;
}
.userinfo-avatar {
	width: 154rpx;
	height: 154rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  background-color: #b90105;
}
.userinfo-nickname {
  font-family: PingFang SC Medium, sans-serif;
  margin: 20rpx 0;
  font-size: 36rpx;
}

.my-item{
  font-family: PingFang SC Medium, sans-serif;
  background-color: #fff;
  width: 100%;
  /*background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;*/
  /*background-size: 16rpx auto, 750rpx auto;*/
  border-bottom: 1px solid #eee;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 100rpx;
  display: flex;
  align-items: center;
}
.my-item-img{
  width: 50rpx;
  height: 36rpx;
}
.my-item-title{
  margin-left: 30rpx;
  flex: 0.7;
}
.my-item-subtitle{
  color: #999;
}
.arrow-right{
  width: 24rpx;
  height: 30rpx;
  margin-left: 30rpx;
}
.my-order{
  width: 92%;
  margin:0rpx 30rpx 30rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.my-order-title{
  font-family: PingFang SC, sans-serif;
  padding: 30rpx 30rpx 0;
  font-size: 30rpx;
  font-weight: 600;
}
.my-order-title::before{
  content: "";
  margin-right: 15rpx;
  border-left: 5rpx solid;
  border-left-color: #f22d47;
}
.about{
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 100rpx;
}

.order-shortcut {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.order-shortcut .item {
  display: flex;
  flex-direction: column;
  width: 187rpx;
  text-align: center;
}
.order-shortcut .item .icon {
  width: 56rpx;
  height: 56rpx;
  margin-left: 60rpx;
}
.order-shortcut .item .text {
  font-size: 26rpx;
  margin-top: 10rpx;
}
.relogin{
  margin-top: 30rpx;
}
