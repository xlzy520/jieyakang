<view class="container">
  <form bindsubmit="createOrder" report-submit="true">
    <view class="address-box">
      <view class="add-address" hidden="{{curAddressData}}">
        <view class="title" bindtap="addAddress">新增收货地址</view>
      </view>
      <view class="show-address" hidden="{{!curAddressData}}" bindtap="selectAddress">
        <view class="row">
          <view class="name-or-class">{{curAddressData.consignee||curAddressData.consignee}}</view>
          <view class="mobile">{{curAddressData.mobile}}</view>
        </view>
        <view class="row">
          <image class="address-type" src="/images/useType/{{curAddressData.addressType?'school':'canguan'}}.png"></image>
          <view class="addr-text">{{curAddressData.address}}</view>
        </view>
        <image class="arrow-right" src="/images/arrow-right.png"></image>
      </view>
    </view>
    <view class="goods-list">
      <view class="a-goods" wx:for-items="{{goodsList}}" wx:key="{{index}}">
        <view class="img-box">
<!--          <image src="{{item.fileUrls[0]}}" class="img"/>-->
          <image src="http://www.xlzy520.cn/750_600/餐馆餐具.png" class="img"/>
        </view>
        <view class="text-box">
          <view class="name-price">
            <view class="goods-name">{{item.goodsName}}</view>
            <view class="goods-price"><view style="font-size: 30rpx">¥</view>{{item.priceStr}}</view>
          </view>
          <view class="guige-num">
            <view class="goods-guige">({{item.specsList[0].specsStr}})</view>
            <view class="goods-num"><view style="font-size: 20rpx;margin-right: 15rpx">x</view> {{item.number|| 100}}</view>
          </view>
          <view class="heji">
            <view class="heji-gong">共{{}}4份, </view>
            <view class="heji-xiaoji">小计:</view>
            <view class="heji-yuan">¥ </view>
            <view class="heji-price">{{}}16.00</view>
          </view>
        </view>
      </view>
    </view>
    <view class="tips">* 08:00 - 17:00 间下单，一小时后开始配送。</view>
    <view class="jiesuan-box">
      <view class="left-price">
        <view class="total">合计：¥ {{allGoodsAndYunPrice - youhuijine}}</view>
      </view>
      <button class="to-pay-btn" formType="submit">提交订单</button>
    </view>
  </form>
</view>
