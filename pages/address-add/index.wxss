.switch__core{
  margin: 0;
  display: inline-block;
  position: relative;
  width: 111rpx;
  height: 60rpx;
  border: 3rpx solid #dcdfe6;
  outline: none;
  border-radius: 30rpx;
  box-sizing: border-box;
  background: #dcdfe6;
  cursor: pointer;
  transition: border-color .5s,background-color .5s;
  vertical-align: middle;
}
.switch__core:after{
  content: "";
  left: 0;
  position: absolute;
  border-radius: 100%;
  transition: all .5s;
  width: 56rpx;
  height: 56rpx;
  background-color: #fff;
}
.switch__on{
  border-color: #0087ff;
  background-color: #0087ff;
}
.switch__off{
  border-color: #efefef;
  background-color: #efefef;
}
.switch.is-checked .switch__core:after {
  left: 50rpx;
}
