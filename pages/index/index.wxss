.goods-container{
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
  background-color: #fff;
  box-sizing: content-box;
  padding: 15rpx 0;
  border-radius: 10rpx;
  margin-top: 10rpx;
}
.goods-header{
  padding: 10rpx 30rpx 20rpx;
  font-size: 24rpx;
  font-weight: bolder;
}
.goods-header::before{
  content: "";
  margin-right: 15rpx;
  border-left: 8rpx solid;
  border-left-color: #f22d47;
}
.goods-box{
  display: flex;
  width: 90%;
  height: 300rpx;
  margin: auto;
  overflow: hidden;
  margin-bottom: 36rpx;
  box-shadow: 0 -2rpx 8rpx 0 #fff,-5rpx 5rpx 8rpx 0 #eee,5rpx 12rpx 8rpx 0 #eee,0 10rpx 18rpx 5rpx #eee;
  align-items: center;
  justify-content: center;
}
.goods-box .img-box{
  width: 339rpx;
  height: 200rpx;
  border: 2px solid #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 339rpx;
