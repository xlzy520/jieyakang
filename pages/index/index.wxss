/**index.wxss**/
.banner{
  width: 720rpx;
  position: relative;
  padding: 0 15rpx;
}

.banner image {
  display: inline-block;
  overflow: hidden;
  width: 100%;
  height: 280rpx;
}

.partner-container{
  width: 750rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
  padding: 9rpx 0;
  border-radius: 12rpx;
}
.partner-header{
  display: flex;
  height: 30rpx;
  line-height: 30rpx;
  font-family: PingFang SC Bold, sans-serif;
  padding: 30rpx 0 30rpx 30rpx;
  font-size: 30rpx;
  font-weight: 600;
}
.partner-header::before{
  display: inline-block;
  content: "";
  width: 6rpx;
  height: 29rpx;
  margin-right: 15rpx;
  background-image: linear-gradient(50deg, #ec693a, #e9425b);
}
.goods-box{
  display: flex;
  width: 690rpx;
  height: 220rpx;
  margin: auto;
  overflow: hidden;
  box-shadow: 0px 11rpx 10rpx 0px rgba(64, 64, 64, 0.09);
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.goods-box .goods-item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
}
.goods-box .img-box{
  width: 164rpx;
  height: 164rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 164rpx;
   height: 164rpx;
}
.goods-box .goods-detail{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  justify-content: space-between;
  height: 164rpx;
}
.goods-box .goods-title, .goods-box .goods-price{
  overflow: hidden;
  margin-left: 30rpx;
}
.goods-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}
.goods-box .goods-title{
  font-family: PingFang SC Medium, sans-serif;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-top: 20rpx;
  font-size: 26rpx;
  font-weight:500;
  line-height: 40rpx;
  color:#000;
}
.goods-box .goods-price{
  font-family: DINAlternate Bold, sans-serif;
  display: flex;
  align-items: center;
  color:#ff001c;
}
.price-label{
  padding-right: 10rpx;
}
.price-value{
  font-size: 34rpx;
}
.price-unit{
  font-size: 26rpx;
  padding-left: 10rpx;
}

.goods-select{
  font-family: PingFang SC Medium, sans-serif;
  width: 126rpx;
  height: 54rpx;
  line-height: 54rpx;
  background-color: #ff001c;
  border-radius: 8rpx;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  font-size: 28rpx;
}
.partner-container .partner-item{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin: 0 30rpx 30rpx;
}
.partner-item image{
  width: 700rpx;
  height: 260rpx;
  border-radius: 12rpx;
}
.partner-modal{
  position: absolute;
  height: 260rpx;
  width: 700rpx;
  background:rgba(40,40,40,0.7);
  border-radius: 12rpx;
}
.partner-name{
  height:34rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: 500;
  position: absolute;
}
