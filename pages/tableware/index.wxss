.container {
  font-family: PingFang SC Medium, sans-serif;
  background-color: #f8f8f8;
  min-height: 100vh;
}
.goods-box{
  display: flex;
  width: 690rpx;
  height: 220rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 36rpx;
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 5rpx 15rpx 15rpx #eee;
}
.goods-box .goods-item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
}
.goods-box .img-box{
  width: 260rpx;
  height: 180rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
  box-sizing: content-box;
}
.goods-box .img-box image{
   width: 260rpx;
   height: 180rpx;
}
.goods-box .goods-detail{
  flex: 1;
}
.goods-box .goods-title, .goods-box .goods-price{
  overflow: hidden;
  font-size: 30rpx;
  margin-left: 48rpx;
}
.goods-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-box .goods-title{
  font-family: PingFang SC Medium, sans-serif;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 50rpx 0 0 0;
  color:#000;
  margin-bottom: 48rpx;
}
.goods-box .goods-price{
  font-family: Mark Pro Regular, sans-serif;
  padding: 24rpx 0;
  color:#ea5255;
}
.goods-select{
  font-family: PingFang SC Medium, sans-serif;
  width: 126rpx;
  height: 54rpx;
  line-height: 54rpx;
  border: 3.5rpx solid #ea5255;
  border-radius: 14rpx;
  text-align: center;
  vertical-align: middle;
  color: #ea5255;
  font-size: 28rpx;
}
