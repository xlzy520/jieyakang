/**index.wxss**/

.container {
  font-family: PingFang SC, serif;
  background-color: #f8f8f8;
  min-height: 100%;
  display: block;
}
.goods-container, .partner-container{
  display: flex;
  justify-content: space-between;
  flex-wrap:wrap;
  background-color: #fff;
  box-sizing: content-box;
  padding: 15rpx 0;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
.goods-header, .partner-header{
  font-family: PingFang SC Bold, sans-serif;
  padding: 10rpx 30rpx 20rpx;
  font-size: 35rpx;
  font-weight: 600;
}
.goods-header::before,.partner-header::before{
  content: "";
  margin-right: 15rpx;
  border-left: 8rpx solid;
  border-left-color: #f22d47;
}
.goods-box{
  display: flex;
  width: 90%;
  height: 220rpx;
  margin: auto;
  overflow: hidden;
  margin-bottom: 36rpx;
  box-shadow: 0 -2rpx 8rpx 0 #fff,-5rpx 5rpx 8rpx 0 #eee,5rpx 12rpx 8rpx 0 #eee,0 10rpx 18rpx 5rpx #eee;
}
.goods-box .goods-item{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
}
.goods-box .img-box{
  width: 260rpx;
  height: 180rpx;
  border: 1.5px solid #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}
.goods-box .img-box image{
   width: 260rpx;
   height: 180rpx;
}
.goods-box .goods-detail{
  flex: 1;
}
.goods-box .goods-title, .goods-box .goods-price{
  overflow: hidden;
  font-size: 30rpx;
  margin-left: 48rpx;
}
.goods-wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-box .goods-title{
  font-family: PingFang SC Medium, sans-serif;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 24rpx 0 0 0;
  color:#000;
  margin-bottom: 30rpx;
}
.goods-box .goods-price{
  font-family: Mark Pro Regular, sans-serif;
  padding: 24rpx 0;
  color:#ea5255;
}
.goods-select{
  font-family: PingFang SC Medium, sans-serif;
  width: 126rpx;
  height: 54rpx;
  line-height: 54rpx;
  border: 3.5rpx solid #ea5255;
  border-radius: 14rpx;
  text-align: center;
  vertical-align: middle;
  color: #ea5255;
  font-size: 28rpx;
}
