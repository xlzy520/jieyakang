.dialog{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 34rpx;
  text-align: center;
  background-color: rgba(127,127,127,.5);
  z-index: 999;
}
.dialog-content{
  font-family: PingFang SC Medium, sans-serif;
  position: absolute;
  top: 434rpx;
  left: 0;
  right: 0;
  width: 540rpx;
  margin: auto;
  background-color: #fff;
  border-radius: 20rpx;
  z-index: 3;
}
.dialog-text{
  text-wrap: normal;
  word-wrap: break-word;
  word-break: normal;
  line-height: 1.2;
  padding: 48rpx 24rpx 43rpx 26rpx;
  font-weight: lighter;
  color: #404040;
  border-bottom: 1rpx solid #d9d9d9;
}
.dialog-close, .dialog-other-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
}
.dialog-column{
  display: flex;
  justify-content: space-between;
}
.dialog-warning .dialog-close{
  color: #ff0000;
}
.dialog-column .dialog-close{
  color: #ff0000;
}
.dialog-column .dialog-other-btn{
  color: #0082ff;
}
.divider{
  border-right: 1px solid #d9d9d9;
}
